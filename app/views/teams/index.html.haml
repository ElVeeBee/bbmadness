%h1 Listing teams

= link_to 'New Team', new_team_path

%table.leaders.table-hover
  %thead
    %tr
      %th Name
      %th Rank
      %th Match Up
      %th Group
      %th

  %tbody
    - @teams.each do |team|
      %tr
        %td 
          = team.name
        %td 
          = team.rank
        %td 
          = team.match_up
        %td 
          = team.group
        %td
          = link_to 'Team Lost', team_lost_team_path(team)
          = link_to 'Edit', edit_team_path(team)
          = link_to 'Destroy', team, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Team', new_team_path
